<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        
        <PreferenceCategory
                android:title="Timing">
                
                <EditTextPreference
                android:name="pause"
                android:summary="Sets duration of pause between Clips"
                android:defaultValue="3000"
                android:title="Timing"
                android:key="timingPref" />
                
                <CheckBoxPreference
                android:name="userTrigger"
                android:summary="User taps screen to continue"
                android:defaultValue="0"
                android:title="User Trigger"
                android:key="pauseUserTrigger" />
                
        </PreferenceCategory>
        
</PreferenceScreen>